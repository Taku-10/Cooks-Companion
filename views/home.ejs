<% layout("layout/boilerplate") %>
<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
  <link rel="stylesheet" href="/Stylesheets/home.css">
</head>

  <!-- Hero Section -->
  <section class="hero">
    <div class="">
      <h1 class="animate__animated animate__fadeInDown">Welcome to Cooks Companion!</h1>
      <p class="slogan animate__animated animate__fadeInUp">Cooking made for companionship</p>
      <p class="animate__animated animate__fadeIn">Discover delicious recipes for every occasion.</p>
      <a href="/recipes" class="cta-btn view-recipes animate__animated animate__fadeIn">View Recipes</a>

    </div>
  </section>
  
  <!-- Features Section -->
  <section class="features py-5">
      <div class="row">
        <div class="col-md-4">
          <div class="card mb-4 animate__animated animate__fadeInLeft">
            <div class="card-body text-center">
              <i class="fa fa-cutlery fa-4x mb-3"></i>
              <h4 class="card-title">Explore a Variety of Recipes</h4>
              <p class="card-text">Discover a wide range of recipes from different cuisines and categories.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4 animate__animated animate__fadeInDown">
            <div class="card-body text-center">
              <i class="fa fa-search fa-4x mb-3"></i>
              <h4 class="card-title">Effortless Recipe Search</h4>
              <p class="card-text">Quickly find the perfect recipe using our powerful search feature.</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card mb-4 animate__animated animate__fadeInRight ">
            <div class="card-body text-center">
              <i class="fa fa-clock fa-4x mb-3"></i>
              <h4 class="card-title">Save Time in the Kitchen</h4>
              <p class="card-text">Get access to time-saving recipes that fit your busy schedule.</p>
            </div>
          </div>
        </div>
      </div>
  </section>
  
  
  <!-- Call to Action Section -->
  <section class="hero">
      <h2 class="animate__animated animate__fadeIn">Ready to Explore?</h2>
      <p class="animate__animated animate__fadeIn slogan">Sign up and unlock all the recipes!</p>
      <a href="/register" class="cta-btn view-recipes animate__animated animate__fadeIn">Sign Up</a>
  </section>
